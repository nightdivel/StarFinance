{$DOMAIN} {
  encode gzip

  tls {$EMAIL}

  header {
    Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  }

  @health {
    path /health
  }

  handle @health {
    reverse_proxy economy:3000
  }

  # По умолчанию проксируем всё приложение на backend
  reverse_proxy economy:3000
}
