# Домен и почта для Caddy / Let's Encrypt
DOMAIN=blsk.fin-tech.com
EMAIL=you@example.com
CERT_NAME=blsk.fin-tech.com

# Внешний URL фронта (приложение доступно в корне домена)
FRONTEND_URL=https://blsk.fin-tech.com
DISCORD_REDIRECT_URI=https://blsk.fin-tech.com/economy/auth/discord/callback

# Внутренний токен для /internal/* запросов
INTERNAL_TOKEN=change-me-long-random

# Адрес identity сервиса (для межсервисных проверок)
IDENTITY_URL=http://identity:4001

# Настройки PostgreSQL (должны совпадать с docker-compose.yml)
PG_HOST=postgres
PG_PORT=5432
PG_DATABASE=starfinance
PG_USER=postgres
PG_PASSWORD=postgres

# При необходимости добавь сюда остальные секреты
# например, DISCORD_CLIENT_ID, DISCORD_CLIENT_SECRET и т.п.
